<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/occurrence_date"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:text="@string/occurrence_date"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/view_occurrence_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/occurrence_date" />

    <TextView
        android:id="@+id/view_occurrence_area"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginVertical="8dp"
        android:gravity="start|center"
        android:text="@string/occurrence_area"
        app:layout_constraintBottom_toTopOf="@id/view_occurrence_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <TextView
        android:id="@+id/view_occurrence_description"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginBottom="64dp"
        android:text="@string/occurrence_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_occurrence_area" />


</androidx.constraintlayout.widget.ConstraintLayout>